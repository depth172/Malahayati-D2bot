{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@domain/*": ["domain/*"],
      "@adapters/*": ["adapters/*"],
      "@utils/*": ["utils/*"],
	  "@api/*": ["api/*"],
	  "@front/*": ["front/*"]
    }
  },
  "include": ["src", "test"]
}